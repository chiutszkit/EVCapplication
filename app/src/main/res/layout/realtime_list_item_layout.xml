<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/realtime_list_view_item_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:src="@drawable/realtime_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/realtime_list_view_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Title]"
            android:textSize="@dimen/realtime_list_view_item_title_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/realtime_list_view_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="[Subtitle]"
            android:textSize="@dimen/realtime_list_view_item_subtitle_textsize" />

    </LinearLayout>
</LinearLayout>
